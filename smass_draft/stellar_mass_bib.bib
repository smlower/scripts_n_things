	file = {Hayward and Smith - 2015 - Should we believe the results of ultraviolet–milli.pdf:/Users/sidneylower/Zotero/storage/YP6FJBND/Hayward and Smith - 2015 - Should we believe the results of ultraviolet–milli.pdf:application/pdf}
