

@article{dudzeviciute_alma_2019,
	title = {An {ALMA} survey of the {SCUBA}-2 {CLS} {UDS} field: {Physical} properties of 707 {Sub}-millimetre {Galaxies}},
	shorttitle = {An {ALMA} survey of the {SCUBA}-2 {CLS} {UDS} field},
	url = {http://arxiv.org/abs/1910.07524},
	abstract = {We analyse the physical properties of a large, homogeneously selected sample of ALMA-located sub-mm galaxies (SMGs) detected in the SCUBA-2 CLS 850-\${\textbackslash}mu\$m map of the UKIDSS/UDS field. This survey, AS2UDS, identified 707 SMGs across the {\textasciitilde}1 sq.deg. field, including {\textasciitilde}17 per cent which are undetected in the optical/near-infrared to \$K\${\textgreater}{\textasciitilde}25.7 mag. We interpret the UV-to-radio data using a physically motivated model, MAGPHYS and determine a median photometric redshift of z=2.61+-0.08, with a 68th percentile range of z=1.8-3.4 and just {\textasciitilde}6 per cent at z{\textgreater}4. The redshift distribution is well fit by a model combining evolution of the gas fraction in halos with the growth of halo mass past a threshold of {\textasciitilde}4x10\${\textasciicircum}\{12\}\$M\$\_{\textbackslash}odot\$, thus SMGs may represent the highly efficient collapse of gas-rich massive halos. Our survey provides a sample of the most massive, dusty galaxies at z{\textgreater}{\textasciitilde}1, with median dust and stellar masses of \$M\_d\$=(6.8+-0.3)x10\${\textasciicircum}\{8\}\$M\$\_{\textbackslash}odot\$ (thus, gas masses of {\textasciitilde}10\${\textasciicircum}\{11\}\$M\$\_{\textbackslash}odot\$) and \$M\_{\textbackslash}ast=\$(1.26+-0.05)x10\${\textasciicircum}\{11\}\$M\$\_{\textbackslash}odot\$. These galaxies have gas fractions of \$f\_\{gas\}=\$0.41+-0.02 with depletion timescales of {\textasciitilde}150Myr. The gas mass function evolution at high masses is consistent with constraints at lower masses from blind CO-surveys, with an increase to z{\textasciitilde}2-3 and then a decline at higher redshifts. The space density and masses of SMGs suggests that almost all galaxies with \$M\_{\textbackslash}ast\${\textgreater}{\textasciitilde}2x10\${\textasciicircum}\{11\}\$M\$\_{\textbackslash}odot\$ have passed through an SMG-like phase. We find no evolution in dust temperature at a constant far-infrared luminosity across z{\textasciitilde}1.5-4. We show that SMGs appear to behave as simple homologous systems in the far-infrared, having properties consistent with a centrally illuminated starburst. Our study provides strong support for an evolutionary link between the active, gas-rich SMG population at z{\textgreater}1 and the formation of massive, bulge-dominated galaxies across the history of the Universe.},
	urldate = {2019-10-18},
	journal = {arXiv:1910.07524 [astro-ph]},
	author = {Dudzevičiūtė, U. and Smail, Ian and Swinbank, A. M. and Stach, S. M. and Almaini, O. and da Cunha, E. and An, Fang Xia and Arumugam, V. and Birkin, J. and Blain, A. W. and Chapman, S. C. and Chen, C.-C. and Conselice, C. J. and Coppin, K. E. K. and Dunlop, J. S. and Farrah, D. and Geach, J. E. and Gullberg, B. and Hartley, W. G. and Hodge, J. A. and Ivison, R. J. and Maltby, D. T. and Scott, D. and Simpson, C. J. and Simpson, J. M. and Thomson, A. P. and Walter, F. and Wardlow, J. L. and Weiss, A. and van der Werf, P.},
	month = oct,
	year = {2019},
	note = {arXiv: 1910.07524},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	file = {arXiv\:1910.07524 PDF:/Users/sidneylower/Zotero/storage/EDNRVAW6/Dudzevičiūtė et al. - 2019 - An ALMA survey of the SCUBA-2 CLS UDS field Physi.pdf:application/pdf;arXiv.org Snapshot:/Users/sidneylower/Zotero/storage/VEHI9H2M/1910.html:text/html}
}


@article{boogaard_muse_2018,
	title = {The {MUSE} {Hubble} {Ultra} {Deep} {Field} {Survey} {XI}. {Constraining} the low-mass end of the stellar mass - star formation rate relation at \$z{\textless}1\$},
