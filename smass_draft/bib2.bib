@article{schreiber_herschel_2015,
	title = {The {Herschel} view of the dominant mode of galaxy growth from z=4 to the present day},
	volume = {575},
	issn = {0004-6361, 1432-0746},
	url = {http://arxiv.org/abs/1409.5433},
	doi = {10.1051/0004-6361/201425017},
	abstract = {We present an analysis of the deepest Herschel images in four major extragalactic fields GOODS-North, GOODS-South, UDS and COSMOS obtained within the GOODS-Herschel and CANDELS-Herschel key programs. The picture provided by 10497 individual far-infrared detections is supplemented by the stacking analysis of a mass-complete sample of 62361 star-forming galaxies from the CANDELS-HST H band-selected catalogs and from two deep ground-based Ks band-selected catalogs in the GOODS-North and the COSMOS-wide fields, in order to obtain one of the most accurate and unbiased understanding to date of the stellar mass growth over the cosmic history. We show, for the first time, that stacking also provides a powerful tool to determine the dispersion of a physical correlation and describe our method called "scatter stacking" that may be easily generalized to other experiments. We demonstrate that galaxies of all masses from z=4 to 0 follow a universal scaling law, the so-called main sequence of star-forming galaxies. We find a universal close-to-linear slope of the logSFR-logM* relation with evidence for a flattening of the main sequence at high masses (log(M*/Msun) {\textgreater} 10.5) that becomes less prominent with increasing redshift and almost vanishes by z{\textasciitilde}2. This flattening may be due to the parallel stellar growth of quiescent bulges in star-forming galaxies. Within the main sequence, we measure a non varying SFR dispersion of 0.3 dex. The specific SFR (sSFR=SFR/M*) of star-forming galaxies is found to continuously increase from z=0 to 4. Finally we discuss the implications of our findings on the cosmic SFR history and show that more than 2/3 of present-day stars must have formed in a regime dominated by the main sequence mode. As a consequence we conclude that, although omnipresent in the distant Universe, galaxy mergers had little impact in shaping the global star formation history over the last 12.5 Gyr.},
	urldate = {2019-11-14},
	journal = {Astronomy \& Astrophysics},
	author = {Schreiber, Corentin and Pannella, Maurilio and Elbaz, David and Béthermin, Matthieu and Inami, Hanae and Dickinson, Mark E. and Magnelli, Benjamin and Wang, Tao and Aussel, Hervé and Daddi, Emanuele and Juneau, Stéphanie and Shu, Xinwen and Sargent, Mark T. and Buat, Véronique and Faber, Sandra M. and Ferguson, Henry C. and Giavalisco, Mauro and Koekemoer, Anton M. and Magdis, Georgios and Morrison, Glenn E. and Papovich, Casey and Santini, Paola and Scott, Douglas},
	month = mar,
	year = {2015},
	note = {arXiv: 1409.5433},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	pages = {A74},
	annote = {Comment: 30 pages, 26 figures, accepted for publication in A\&A},
	file = {arXiv Fulltext PDF:/Users/sidneylower/Zotero/storage/HREEASFS/Schreiber et al. - 2015 - The Herschel view of the dominant mode of galaxy g.pdf:application/pdf;arXiv.org Snapshot:/Users/sidneylower/Zotero/storage/9I3ZD6B9/1409.html:text/html}
}

@article{draine_infrared_2007,
